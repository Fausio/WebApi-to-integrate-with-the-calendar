@model TestGoogleCalendarAPI_MVC.Models.Event

<div style="margin-top: 50px">
    <form method="post" asp-action="CreateEvent" asp-controller="CalindarEvent">

        <div class="row" style="margin:10px;">
            <label>Summary:</label>
            <input asp-for="Summary" type="text" class="col-sm-1 form-control" autocomplete="off" value="" />
        </div>

        <div class="row" style="margin:10px;">
            <label>Description:</label>
            <input asp-for="Description" type="text" class="col-sm-1 form-control" autocomplete="off" value="" />
        </div>

        <div class="row" style="margin:10px;">
            <label>Start Date time:</label>
            <input asp-for="Start.DateTime" type="text" class="col-sm-1 form-control" autocomplete="off" value="" />
        </div>

        <div class="row" style="margin:10px;">
            <label>End Date time:</label>
            <input asp-for="End.DateTime" type="text" class="col-sm-1 form-control" autocomplete="off" value="" />
        </div>

        <div class="row col-sm-3" style="margin:10px;">
            <input type="submit" value="submit" class="btn btn-primary" />
        </div>

    </form>
</div>